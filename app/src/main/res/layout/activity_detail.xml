<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="items"
            type="com.example.hostelproject.models.Item" />
    </data>

    <RelativeLayout
        android:id="@+id/relative_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D3D3D3"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />


        <RelativeLayout
            android:layout_below="@+id/toolbar"
            android:layout_width="match_parent"
            android:id="@+id/relative"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageViewDe"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="?android:selectableItemBackground"
                android:clickable="true"
                app:imageUrl="@{items.profilePicture}"
                android:focusable="true"
                android:src="@drawable/profile" />

            <ProgressBar
                android:id="@+id/progressbarUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_below="@id/relative"
            android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="First Name"
                    android:textColor="#4C4A4E" />

                <EditText
                    android:id="@+id/texView_first_name"
                    style="@style/AppTheme.Widget.FormField"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/form_field_height"
                    android:layout_marginTop="4dp"
                    android:text="@{items.fname}"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/backgrounds"
                    android:enabled="false"
                    android:focusable="true"
                    android:gravity="center"
                    android:minLines="3"
                    android:textAppearance="@style/AppTheme.Widget.TextView.FormFieldMessage"
                    android:textColor="#000" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Middle Name"
                    android:textColor="#4C4A4E" />

                <EditText
                    android:id="@+id/texView_middle_name"
                    style="@style/AppTheme.Widget.FormField"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/form_field_height"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/backgrounds"
                    android:enabled="false"
                    android:focusable="true"
                    android:text="@{items.mname}"
                    android:gravity="center"
                    android:minLines="3"
                    android:textAppearance="@style/AppTheme.Widget.TextView.FormFieldMessage"
                    android:textColor="#000" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Surname"
                    android:textColor="#4C4A4E" />

                <EditText
                    android:id="@+id/texView_sur_name"
                    style="@style/AppTheme.Widget.FormField"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/form_field_height"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/backgrounds"
                    android:enabled="false"
                    android:text="@{items.sname}"
                    android:focusable="true"
                    android:gravity="center"
                    android:minLines="3"
                    android:textAppearance="@style/AppTheme.Widget.TextView.FormFieldMessage"
                    android:textColor="#000" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="School/Institution"
                    android:textColor="#4C4A4E" />

                <EditText
                    android:id="@+id/texView_school"
                    style="@style/AppTheme.Widget.FormField"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/form_field_height"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/backgrounds"
                    android:enabled="false"
                    android:text="@{items.school}"
                    android:focusable="true"
                    android:gravity="center"
                    android:minLines="3"
                    android:textAppearance="@style/AppTheme.Widget.TextView.FormFieldMessage"
                    android:textColor="#000" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date of Birth"
                    android:textColor="#4C4A4E" />

                <TextView
                    android:id="@+id/texView_dob"
                    style="@style/AppTheme.Widget.FormField"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/form_field_height"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/backgrounds"
                    android:enabled="false"
                    android:text="@{items.dob}"
                    android:focusable="true"
                    android:gravity="center"
                    android:minLines="3"
                    android:textAppearance="@style/AppTheme.Widget.TextView.FormFieldMessage"
                    android:textColor="#000" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email Address"
                    android:textColor="#4C4A4E" />

                <EditText
                    android:id="@+id/texView_email"
                    style="@style/AppTheme.Widget.FormField"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/form_field_height"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/backgrounds"
                    android:enabled="false"
                    android:focusable="true"
                    android:text="@{items.email}"
                    android:focusableInTouchMode="true"
                    android:gravity="center"
                    android:minLines="3"
                    android:textAppearance="@style/AppTheme.Widget.TextView.FormFieldMessage"
                    android:textColor="#000" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phone Number"
                    android:textColor="#4C4A4E" />

                <EditText
                    android:id="@+id/texView_phone"
                    style="@style/AppTheme.Widget.FormField"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/form_field_height"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/backgrounds"
                    android:enabled="false"
                    android:focusable="true"
                    android:text="@{items.phone}"
                    android:focusableInTouchMode="true"
                    android:gravity="center"
                    android:minLines="3"
                    android:textAppearance="@style/AppTheme.Widget.TextView.FormFieldMessage"
                    android:textColor="#000" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="City/Town"
                    android:textColor="#4C4A4E" />

                <EditText
                    android:id="@+id/texView_city"
                    style="@style/AppTheme.Widget.FormField"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/form_field_height"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/backgrounds"
                    android:enabled="false"
                    android:focusable="true"
                    android:text="@{items.city}"
                    android:focusableInTouchMode="true"
                    android:gravity="center"
                    android:minLines="3"
                    android:textAppearance="@style/AppTheme.Widget.TextView.FormFieldMessage"
                    android:textColor="#000" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Parent/Guardian Name"
                    android:textColor="#4C4A4E" />

                <EditText
                    android:id="@+id/texView_parent_name"
                    style="@style/AppTheme.Widget.FormField"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/form_field_height"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/backgrounds"
                    android:enabled="false"
                    android:focusable="true"
                    android:text="@{items.parentsName}"
                    android:focusableInTouchMode="true"
                    android:gravity="center"
                    android:minLines="3"
                    android:textAppearance="@style/AppTheme.Widget.TextView.FormFieldMessage"
                    android:textColor="#000" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Parent/Guardian Contact"
                    android:textColor="#4C4A4E" />

                <EditText
                    android:id="@+id/texView_parent_contact"
                    style="@style/AppTheme.Widget.FormField"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/form_field_height"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/backgrounds"
                    android:enabled="false"
                    android:focusable="true"
                    android:text="@{items.parentsContact}"
                    android:focusableInTouchMode="true"
                    android:gravity="center"
                    android:minLines="3"
                    android:textAppearance="@style/AppTheme.Widget.TextView.FormFieldMessage"
                    android:textColor="#000" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Emergency Contact"
                    android:textColor="#4C4A4E" />

                <EditText
                    android:id="@+id/texView_emergency_contact"
                    style="@style/AppTheme.Widget.FormField"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/form_field_height"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/backgrounds"
                    android:enabled="false"
                    android:text="@{items.emergency}"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center"
                    android:minLines="3"
                    android:textAppearance="@style/AppTheme.Widget.TextView.FormFieldMessage"
                    android:textColor="#000" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ID"
                    android:textColor="#4C4A4E" />
                <TextView
                    android:id="@+id/texView_image"
                    style="@style/AppTheme.Widget.FormField"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/form_field_height"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/backgrounds"
                    android:gravity="center"
                    android:minLines="3"
                    android:textAppearance="@style/AppTheme.Widget.TextView.FormFieldMessage"
                    android:textColor="#000" />

            </LinearLayout>

        </ScrollView>
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressbar2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />
    </RelativeLayout>
</layout>